<h1>Parties</h1>(<%= link_to 'Create new', new_party_path %>)
<table class="table table-bordered">
	<thead>
		<tr>
			
			<th>Party Name</th>
			<th>Party President</th>
			<th>Established on</th>
			<th>Show Details</th>
			<th>Edit Details</th>
		</tr>
	</thead>
	<tbody>
		<% @parties.each do |f| %>
		<tr>
			
			<td><%= f.name %></td>
			<td><%= f.president %></td>
			<td><%= f.established_year%></td>
			<td><%= link_to ' Show  ', party_path(f) %></td>
			<td><%= link_to ' Edit ', edit_party_path(f) %></td>
		</tr>
		<% end %>
	</tbody>
</table>

